@{
    ViewData["Title"] = "Thanh toán";
}

<div class="container py-5">
    <h2 class="mb-4">THANH TOÁN ĐƠN HÀNG</h2>

    <div class="row">
        <!-- Checkout Form -->
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-body">
                    <h4 class="card-title mb-4">THÔNG TIN GIAO HÀNG</h4>
                    <form>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Họ và tên *</label>
                                <input type="text" class="form-control" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Số điện thoại *</label>
                                <input type="tel" class="form-control" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email *</label>
                            <input type="email" class="form-control" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Địa chỉ giao hàng *</label>
                            <input type="text" class="form-control" placeholder="Số nhà, tên đường" required>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Tỉnh/Thành phố *</label>
                                <select class="form-select" required>
                                    <option value="">Chọn tỉnh/thành</option>
                                    <option>TP. Hồ Chí Minh</option>
                                    <option>Hà Nội</option>
                                    <option>Đà Nẵng</option>
                                </select>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Quận/Huyện *</label>
                                <select class="form-select" required>
                                    <option value="">Chọn quận/huyện</option>
                                </select>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Phường/Xã *</label>
                                <select class="form-select" required>
                                    <option value="">Chọn phường/xã</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Ghi chú đơn hàng (tùy chọn)</label>
                            <textarea class="form-control" rows="3" placeholder="Ghi chú về đơn hàng, ví dụ: thời gian hay chỉ dẫn địa điểm giao hàng chi tiết hơn."></textarea>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <h4 class="card-title mb-4">PHƯƠNG THỨC THANH TOÁN</h4>
                    
                    <div class="form-check mb-3 p-3 border rounded">
                        <input class="form-check-input" type="radio" name="payment" id="cod" checked>
                        <label class="form-check-label" for="cod">
                            <strong>Thanh toán khi nhận hàng (COD)</strong>
                            <p class="text-muted mb-0 mt-2">Thanh toán bằng tiền mặt khi nhận hàng</p>
                        </label>
                    </div>

                    <div class="form-check mb-3 p-3 border rounded">
                        <input class="form-check-input" type="radio" name="payment" id="bank">
                        <label class="form-check-label" for="bank">
                            <strong>Chuyển khoản ngân hàng</strong>
                            <p class="text-muted mb-0 mt-2">Chuyển khoản trực tiếp vào tài khoản ngân hàng</p>
                        </label>
                    </div>

                    <div class="form-check mb-3 p-3 border rounded">
                        <input class="form-check-input" type="radio" name="payment" id="card">
                        <label class="form-check-label" for="card">
                            <strong>Thanh toán thẻ ATM/Visa/Master</strong>
                            <p class="text-muted mb-0 mt-2">Thanh toán qua cổng thanh toán trực tuyến</p>
                        </label>
                    </div>

                    <div class="form-check mb-3 p-3 border rounded">
                        <input class="form-check-input" type="radio" name="payment" id="momo">
                        <label class="form-check-label" for="momo">
                            <strong>Ví điện tử MoMo</strong>
                            <p class="text-muted mb-0 mt-2">Thanh toán qua ví MoMo</p>
                        </label>
                    </div>
                </div>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="col-md-4">
            <div class="card sticky-top" style="top: 20px;">
                <div class="card-body">
                    <h4 class="card-title mb-4">ĐƠN HÀNG CỦA BẠN</h4>

                    <div class="order-items mb-3">
                        <div class="d-flex justify-content-between mb-2">
                            <div>
                                <strong>Sofa Góc Hiện Đại</strong>
                                <br><small class="text-muted">x1</small>
                            </div>
                            <span>15.000.000đ</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <div>
                                <strong>Bàn Ăn 6 Ghế</strong>
                                <br><small class="text-muted">x1</small>
                            </div>
                            <span>8.900.000đ</span>
                        </div>
                    </div>

                    <hr>

                    <div class="d-flex justify-content-between mb-2">
                        <span>Tạm tính:</span>
                        <strong>23.900.000đ</strong>
                    </div>

                    <div class="d-flex justify-content-between mb-2">
                        <span>Phí vận chuyển:</span>
                        <strong class="text-success">Miễn phí</strong>
                    </div>

                    <div class="d-flex justify-content-between mb-2">
                        <span>Giảm giá:</span>
                        <strong class="text-danger">-500.000đ</strong>
                    </div>

                    <hr>

                    <div class="d-flex justify-content-between mb-4">
                        <h5>Tổng cộng:</h5>
                        <h5 class="text-danger">23.400.000đ</h5>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="terms" required>
                        <label class="form-check-label" for="terms">
                            Tôi đã đọc và đồng ý với <a href="#">điều khoản và điều kiện</a> của website
                        </label>
                    </div>

                    <button type="button" onclick="submitOrder()" class="btn btn-primary-custom w-100 btn-lg">
                        <i class="fas fa-check-circle"></i> ĐẶT HÀNG
                    </button>

                    <div class="mt-3 text-center">
                        <small class="text-muted">
                            <i class="fas fa-lock"></i> Thông tin của bạn được bảo mật
                        </small>
                    </div>

                    <div class="mt-3 text-center">
                        <img src="https://via.placeholder.com/50x30/3498db/ffffff?text=VISA" class="me-2" alt="Visa">
                        <img src="https://via.placeholder.com/50x30/e74c3c/ffffff?text=MC" class="me-2" alt="Mastercard">
                        <img src="https://via.placeholder.com/50x30/27ae60/ffffff?text=ATM" class="me-2" alt="ATM">
                        <img src="https://via.placeholder.com/50x30/9b59b6/ffffff?text=MOMO" alt="MoMo">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.order-items {
    max-height: 200px;
    overflow-y: auto;
}
</style>
