@{
    ViewData["Title"] = "Tìm kiếm sản phẩm";
    var keyword = ViewBag.Keyword as string ?? "";
}

<div class="container py-5">
    <h2 class="mb-4">KẾT QUẢ TÌM KIẾM: "@keyword"</h2>

    <div class="row">
        <div class="col-12">
            <p class="text-muted">Tìm thấy 8 sản phẩm phù hợp với từ khóa "<strong>@keyword</strong>"</p>
        </div>
    </div>

    <div class="row">
        @for (int i = 1; i <= 8; i++)
        {
            <div class="col-md-3">
                <div class="product-card">
                    <a asp-controller="SanPham" asp-action="Details" asp-route-id="SP@(i.ToString("000"))">
                        <div class="product-image">
                            <img src="https://via.placeholder.com/300x250/95a5a6/ffffff?text=San+Pham+@i" alt="Sản phẩm @i">
                            @if (i % 3 == 0)
                            {
                                <span class="product-badge">-15%</span>
                            }
                        </div>
                    </a>
                    <div class="product-info">
                        <a asp-controller="SanPham" asp-action="Details" asp-route-id="SP@(i.ToString("000"))">
                            <h5 class="product-name">Sản phẩm @keyword @i</h5>
                        </a>
                        <div class="product-price">
                            @((i * 1500000).ToString("N0"))đ
                        </div>
                        <button class="btn-add-cart" data-product-id="SP@(i.ToString("000"))" data-product-name="Sản phẩm @keyword @i" data-product-price="@(i * 1500000)">
                            <i class="fas fa-shopping-cart"></i> Thêm vào giỏ
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (string.IsNullOrEmpty(keyword))
    {
        <div class="row mt-5">
            <div class="col-12 text-center">
                <i class="fas fa-search" style="font-size: 64px; color: #ccc;"></i>
                <h4 class="mt-3">Vui lòng nhập từ khóa tìm kiếm</h4>
            </div>
        </div>
    }
</div>
