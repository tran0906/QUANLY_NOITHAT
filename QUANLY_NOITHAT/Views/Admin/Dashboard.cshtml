@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">DASHBOARD</h2>

<!-- Statistics Cards -->
<div class="row">
    <div class="col-md-3">
        <div class="stat-card primary">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <p class="text-muted mb-1">Tổng đơn hàng</p>
                    <h3>1,234</h3>
                    <small class="text-success"><i class="fas fa-arrow-up"></i> 12% so với tháng trước</small>
                </div>
                <div class="stat-icon text-primary">
                    <i class="fas fa-shopping-cart"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card success">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <p class="text-muted mb-1">Doanh thu</p>
                    <h3>2.5 tỷ</h3>
                    <small class="text-success"><i class="fas fa-arrow-up"></i> 8% so với tháng trước</small>
                </div>
                <div class="stat-icon text-success">
                    <i class="fas fa-dollar-sign"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card warning">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <p class="text-muted mb-1">Sản phẩm</p>
                    <h3>456</h3>
                    <small class="text-muted">Tổng số sản phẩm</small>
                </div>
                <div class="stat-icon text-warning">
                    <i class="fas fa-box"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card danger">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <p class="text-muted mb-1">Khách hàng</p>
                    <h3>789</h3>
                    <small class="text-success"><i class="fas fa-arrow-up"></i> 15 khách hàng mới</small>
                </div>
                <div class="stat-icon text-danger">
                    <i class="fas fa-users"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Orders -->
<div class="row mt-4">
    <div class="col-md-8">
        <div class="data-table">
            <h4 class="mb-3">ĐƠN HÀNG GẦN ĐÂY</h4>
            <table class="table">
                <thead>
                    <tr>
                        <th>Mã ĐH</th>
                        <th>Khách hàng</th>
                        <th>Ngày đặt</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>#DH001</td>
                        <td>Nguyễn Văn A</td>
                        <td>03/12/2025</td>
                        <td>15.000.000đ</td>
                        <td><span class="badge-status badge-pending">Chờ xử lý</span></td>
                        <td>
                            <button class="btn btn-sm btn-primary"><i class="fas fa-eye"></i></button>
                            <button class="btn btn-sm btn-success"><i class="fas fa-check"></i></button>
                        </td>
                    </tr>
                    <tr>
                        <td>#DH002</td>
                        <td>Trần Thị B</td>
                        <td>02/12/2025</td>
                        <td>8.900.000đ</td>
                        <td><span class="badge-status badge-completed">Hoàn thành</span></td>
                        <td>
                            <button class="btn btn-sm btn-primary"><i class="fas fa-eye"></i></button>
                        </td>
                    </tr>
                    <tr>
                        <td>#DH003</td>
                        <td>Lê Văn C</td>
                        <td>01/12/2025</td>
                        <td>12.500.000đ</td>
                        <td><span class="badge-status badge-pending">Đang giao</span></td>
                        <td>
                            <button class="btn btn-sm btn-primary"><i class="fas fa-eye"></i></button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="col-md-4">
        <div class="data-table">
            <h4 class="mb-3">SẢN PHẨM BÁN CHẠY</h4>
            <div class="list-group">
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <strong>Sofa Góc</strong>
                        <br><small class="text-muted">Đã bán: 45</small>
                    </div>
                    <span class="badge bg-primary rounded-pill">45</span>
                </div>
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <strong>Bàn Ăn</strong>
                        <br><small class="text-muted">Đã bán: 38</small>
                    </div>
                    <span class="badge bg-primary rounded-pill">38</span>
                </div>
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <strong>Giường Ngủ</strong>
                        <br><small class="text-muted">Đã bán: 32</small>
                    </div>
                    <span class="badge bg-primary rounded-pill">32</span>
                </div>
            </div>
        </div>
    </div>
</div>
