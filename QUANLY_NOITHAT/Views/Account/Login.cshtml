@model QUANLY_NOITHAT.Models.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-body p-5">
                    <h3 class="text-center mb-4">ĐĂNG NHẬP</h3>
                    
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="alert alert-info">
                        <strong>Tài khoản demo:</strong><br>
                        Admin: <code>admin / Admin123</code><br>
                        User: <code>user / User123</code>
                    </div>
                    
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="UserId" class="form-label"></label>
                            <input asp-for="UserId" class="form-control" placeholder="Nhập tên đăng nhập" />
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="MatKhau" class="form-label"></label>
                            <input asp-for="MatKhau" class="form-control" placeholder="Nhập mật khẩu" />
                            <span asp-validation-for="MatKhau" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label"></label>
                        </div>
                        
                        <button type="submit" class="btn btn-primary-custom w-100 mb-3">
                            <i class="fas fa-sign-in-alt"></i> ĐĂNG NHẬP
                        </button>
                        
                        <div class="text-center">
                            <a asp-action="ForgotPassword">Quên mật khẩu?</a>
                        </div>
                        
                        <hr class="my-4">
                        
                        <div class="text-center">
                            <p>Chưa có tài khoản? <a asp-action="Register" class="text-primary fw-bold">Đăng ký ngay</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
