@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <h1>NỘI THẤT CAO CẤP</h1>
        <p>Tạo không gian sống hoàn hảo với những sản phẩm nội thất hiện đại</p>
        <a asp-controller="SanPham" asp-action="Index" class="btn btn-primary-custom">Khám phá ngay</a>
    </div>
</section>

<!-- Categories Section -->
<section class="py-5">
    <div class="container">
        <div class="section-title">
            <h2>DANH MỤC SẢN PHẨM</h2>
        </div>
        <div class="row">
            <div class="col-md-3">
                <a asp-controller="SanPham" asp-action="Index" asp-route-category="phong-khach" class="category-card">
                    <img src="https://via.placeholder.com/400x300/34495e/ffffff?text=Phong+Khach" alt="Phòng khách">
                    <div class="category-overlay">
                        <span>PHÒNG KHÁCH</span>
                    </div>
                </a>
            </div>
            <div class="col-md-3">
                <a asp-controller="SanPham" asp-action="Index" asp-route-category="phong-ngu" class="category-card">
                    <img src="https://via.placeholder.com/400x300/e67e22/ffffff?text=Phong+Ngu" alt="Phòng ngủ">
                    <div class="category-overlay">
                        <span>PHÒNG NGỦ</span>
                    </div>
                </a>
            </div>
            <div class="col-md-3">
                <a asp-controller="SanPham" asp-action="Index" asp-route-category="phong-bep" class="category-card">
                    <img src="https://via.placeholder.com/400x300/3498db/ffffff?text=Phong+Bep" alt="Phòng bếp">
                    <div class="category-overlay">
                        <span>PHÒNG BẾP</span>
                    </div>
                </a>
            </div>
            <div class="col-md-3">
                <a asp-controller="SanPham" asp-action="Index" asp-route-category="phong-lam-viec" class="category-card">
                    <img src="https://via.placeholder.com/400x300/27ae60/ffffff?text=Phong+Lam+Viec" alt="Phòng làm việc">
                    <div class="category-overlay">
                        <span>PHÒNG LÀM VIỆC</span>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Featured Products -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="section-title">
            <h2>SẢN PHẨM NỔI BẬT</h2>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="product-card">
                    <a asp-controller="SanPham" asp-action="Details" asp-route-id="SP001">
                        <div class="product-image">
                            <img src="https://via.placeholder.com/300x250/95a5a6/ffffff?text=Sofa" alt="Sofa">
                            <span class="product-badge">-20%</span>
                        </div>
                    </a>
                    <div class="product-info">
                        <a asp-controller="SanPham" asp-action="Details" asp-route-id="SP001">
                            <h5 class="product-name">Sofa Góc Hiện Đại</h5>
                        </a>
                        <div class="product-price">
                            15.000.000đ
                            <span class="old-price">18.000.000đ</span>
                        </div>
                        <button class="btn-add-cart" data-product-id="SP001" data-product-name="Sofa Góc Hiện Đại" data-product-price="15000000">
                            <i class="fas fa-shopping-cart"></i> Thêm vào giỏ
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="product-card">
                    <a asp-controller="SanPham" asp-action="Details" asp-route-id="SP002">
                        <div class="product-image">
                            <img src="https://via.placeholder.com/300x250/7f8c8d/ffffff?text=Giuong" alt="Giường">
                            <span class="product-badge">HOT</span>
                        </div>
                    </a>
                    <div class="product-info">
                        <a asp-controller="SanPham" asp-action="Details" asp-route-id="SP002">
                            <h5 class="product-name">Giường Ngủ Gỗ Sồi</h5>
                        </a>
                        <div class="product-price">
                            12.500.000đ
                        </div>
                        <button class="btn-add-cart" data-product-id="SP002" data-product-name="Giường Ngủ Gỗ Sồi" data-product-price="12500000">
                            <i class="fas fa-shopping-cart"></i> Thêm vào giỏ
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="product-card">
                    <a asp-controller="SanPham" asp-action="Details" asp-route-id="SP003">
                        <div class="product-image">
                            <img src="https://via.placeholder.com/300x250/bdc3c7/ffffff?text=Ban+An" alt="Bàn ăn">
                        </div>
                    </a>
                    <div class="product-info">
                        <a asp-controller="SanPham" asp-action="Details" asp-route-id="SP003">
                            <h5 class="product-name">Bộ Bàn Ăn 6 Ghế</h5>
                        </a>
                        <div class="product-price">
                            8.900.000đ
                        </div>
                        <button class="btn-add-cart" data-product-id="SP003" data-product-name="Bộ Bàn Ăn 6 Ghế" data-product-price="8900000">
                            <i class="fas fa-shopping-cart"></i> Thêm vào giỏ
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="product-card">
                    <a asp-controller="SanPham" asp-action="Details" asp-route-id="SP004">
                        <div class="product-image">
                            <img src="https://via.placeholder.com/300x250/ecf0f1/333333?text=Tu+Quan+Ao" alt="Tủ quần áo">
                            <span class="product-badge">NEW</span>
                        </div>
                    </a>
                    <div class="product-info">
                        <a asp-controller="SanPham" asp-action="Details" asp-route-id="SP004">
                            <h5 class="product-name">Tủ Quần Áo Cánh Lùa</h5>
                        </a>
                        <div class="product-price">
                            9.500.000đ
                        </div>
                        <button class="btn-add-cart" data-product-id="SP004" data-product-name="Tủ Quần Áo Cánh Lùa" data-product-price="9500000">
                            <i class="fas fa-shopping-cart"></i> Thêm vào giỏ
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="feature-box">
                    <div class="feature-icon">
                        <i class="fas fa-shipping-fast"></i>
                    </div>
                    <h4>GIAO HÀNG MIỄN PHÍ</h4>
                    <p>Miễn phí vận chuyển cho đơn hàng trên 5 triệu</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-box">
                    <div class="feature-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h4>BẢO HÀNH 2 NĂM</h4>
                    <p>Cam kết bảo hành chính hãng</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-box">
                    <div class="feature-icon">
                        <i class="fas fa-undo"></i>
                    </div>
                    <h4>ĐỔI TRẢ DỄ DÀNG</h4>
                    <p>Đổi trả trong vòng 7 ngày</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-box">
                    <div class="feature-icon">
                        <i class="fas fa-headset"></i>
                    </div>
                    <h4>HỖ TRỢ 24/7</h4>
                    <p>Tư vấn nhiệt tình, chuyên nghiệp</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Promotion Banner -->
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mb-3">
                <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 40px; border-radius: 10px; color: white;">
                    <h3>KHUYẾN MÃI ĐẶC BIỆT</h3>
                    <p>Giảm giá lên đến 30% cho sản phẩm phòng khách</p>
                    <a asp-controller="SanPham" asp-action="Index" asp-route-category="khuyen-mai" class="btn btn-light">Xem ngay</a>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); padding: 40px; border-radius: 10px; color: white;">
                    <h3>BỘ SƯU TẬP MỚI</h3>
                    <p>Khám phá bộ sưu tập nội thất hiện đại 2025</p>
                    <a asp-controller="SanPham" asp-action="Index" class="btn btn-light">Khám phá</a>
                </div>
            </div>
        </div>
    </div>
</section>
